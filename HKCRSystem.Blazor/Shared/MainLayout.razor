@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <MudItem xs="12" sm="6" md="5">
            <MudTextField @bind-Value="Search" Label="" Variant="Variant.Filled" Color="Color.Primary" Margin="Margin.Dense" Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.Search" />
        </MudItem>
        <MudSpacer />
        <MudText>Khemraj</MudText>
       @* <MudText>@Username</MudText>*@
        <MudMenu Icon="@Icons.Material.Filled.Person" Color="Color.Inherit" aria-label="Person">
            @*@if (UserRole == Role.Admin)*@

            <MudMenuItem Icon="@Icons.Material.Filled.Person" IconColor="Color.Primary" Href="/users">Role</MudMenuItem>
            <MudMenuItem Icon="@Icons.Material.Filled.Security" IconColor="Color.Primary" Href="/change-password">Security</MudMenuItem>
            <MudMenuItem Icon="@Icons.Material.Filled.Logout" IconColor="Color.Error">Logout</MudMenuItem>
            @*<MudMenuItem Icon="@Icons.Material.Filled.Logout" IconColor="Color.Error" @onclick="LogoutHandler">Logout</MudMenuItem>*@
        </MudMenu>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="2">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6" Class="px-4">HamroCarRental</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;
    public string Search { get; set; }

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
